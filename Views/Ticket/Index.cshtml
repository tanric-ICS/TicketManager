@model IEnumerable<Ticket>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="test-primary">Your Tickets</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Ticket" asp-action="Create" class="btn btn-primary">
                Create New Ticket
            </a>
        </div>
    </div>
</div>
<br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Ticket Name
            </th>
            <th>
                Date Created/Last Edited
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="50%">
                        @obj.CreatedDateTime
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Ticket" asp-action="View" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2">View</a>
                            <a asp-controller="Ticket" asp-action="Edit" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Ticket" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
    </tbody>
</table>

